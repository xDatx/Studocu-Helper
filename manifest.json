{
  "manifest_version": 3,
  "name": "Studocu Helper",
  "version": "1.0", 
  "permissions": [
    "cookies",
    "scripting",  
    "activeTab"
  ],
  "host_permissions": [
    "*://*.studocu.com/*",
    "*://*.studocu.vn/*"
  ],
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Studocu Tools"
  },
  "content_scripts": [
    {
      "matches": ["*://*.studocu.com/*", "*://*.studocu.vn/*"],
      "css": ["custom_style.css"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["viewer_styles.css"],
      "matches": ["*://*.studocu.com/*", "*://*.studocu.vn/*"]
    }
  ]
}